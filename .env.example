# Configuración de la base de datos
# Para desarrollo local sin Docker:
#
# Para Docker:
DATABASE_URL=postgresql://USER:PASSWORD@HOST:5432/DBNAME

# Configuración de la aplicación
APP_NAME=BeCard API
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true
SQL_ECHO=false
AUTO_CREATE_DB=true

# Configuración del servidor
HOST=0.0.0.0
PORT=8000

# Configuración CORS (separar múltiples orígenes con comas)
# Para desarrollo:
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://127.0.0.1:5173,http://127.0.0.1:3000
# Para producción, especificar solo los dominios permitidos:
# CORS_ORIGINS=https://tudominio.com,https://www.tudominio.com

# Configuración JWT
SECRET_KEY=CHANGE_ME_TO_A_LONG_RANDOM_SECRET
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256
JWT_ISSUER=
JWT_AUDIENCE=

# Frontend (para links de reset/verify)
FRONTEND_URL=http://127.0.0.1:5173

EMAIL_BACKEND=disabled
BREVO_SMTP_HOST=smtp-relay.brevo.com
BREVO_SMTP_PORT=587
BREVO_SMTP_USERNAME=
BREVO_SMTP_PASSWORD=
BREVO_SMTP_FROM_EMAIL=noreply@becard.com
BREVO_SMTP_FROM_NAME=BeCard
SMTP_USE_TLS=true
SMTP_USE_SSL=false
